<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cream"
        android:orientation="vertical"
        tools:context=".Activities.AdoptDetail">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_adopt_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cream"
            app:title="Chi tiết nhận nuôi"
            app:titleTextColor="@color/black"
            app:navigationIcon="@drawable/ic_back"
            tools:ignore="MissingConstraints"
            />


        <ImageView
            android:id="@+id/imgAdopt"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/t" />


        <TextView
            android:id="@+id/txtCatName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Tên mèo"
            android:textColor="@color/black"
            android:paddingLeft="16dp"
            android:paddingTop="20dp"
            />

        <TextView
            android:id="@+id/txtCatOwner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:text="Chủ sở hữu"
            />


        <TextView
            android:id="@+id/txtAdoptTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:paddingLeft="16dp"
            android:text="Thời gian nhận nuôi" />

