<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".Activities.Option">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_option"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/cream_green"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="">
        <TextView
            android:id="@+id/txtUsername"
            android:text="Xin chào, "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textSize="20dp"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- CardView cho mục Nhân viên -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardStaff"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- LinearLayout để chứa icon và tên mục -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_green"
            android:padding="16dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/iconStaff"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_person" /> <!-- Đặt icon tương ứng ở đây -->

            <!-- Tên mục -->
            <TextView
                android:id="@+id/tvStaff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhân viên"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView cho các mục khác -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardStaff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- LinearLayout để chứa icon và tên mục -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_green"
            android:padding="16dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/iconCategory"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_category" /> <!-- Đặt icon tương ứng ở đây -->

            <!-- Tên mục -->
            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại món"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardProduct"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- LinearLayout để chứa icon và tên mục -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_green"
            android:padding="16dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/iconProduct"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_food" /> <!-- Đặt icon tương ứng ở đây -->

            <!-- Tên mục -->
            <TextView
                android:id="@+id/tvProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Món"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardCustomer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardProduct"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- LinearLayout để chứa icon và tên mục -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_green"
            android:padding="16dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/iconCustomer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_customer" /> <!-- Đặt icon tương ứng ở đây -->

            <!-- Tên mục -->
            <TextView
                android:id="@+id/tvCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khách hàng"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardOrder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardCustomer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- LinearLayout để chứa icon và tên mục -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_green"
            android:padding="16dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/iconOrder"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_order" /> <!-- Đặt icon tương ứng ở đây -->

            <!-- Tên mục -->
            <TextView
                android:id="@+id/tvOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hóa đơn"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAdopt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- LinearLayout để chứa icon và tên mục -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_green"
            android:padding="16dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/iconAdopt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_adopt" /> <!-- Đặt icon tương ứng ở đây -->

            <!-- Tên mục -->
            <TextView
                android:id="@+id/tvAdopt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhận nuôi"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardStatistic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardAdopt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- LinearLayout để chứa icon và tên mục -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_green"
            android:padding="16dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/iconChart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_chart" /> <!-- Đặt icon tương ứng ở đây -->

            <!-- Tên mục -->
            <TextView
                android:id="@+id/tvStatistic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thống kê"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardExchange"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardStatistic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- LinearLayout để chứa icon và tên mục -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_green"
            android:padding="16dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/iconexchange"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_exchange" /> <!-- Đặt icon tương ứng ở đây -->

            <!-- Tên mục -->
            <TextView
                android:id="@+id/tvExchange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đổi điểm"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLogout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_margin="16dp"
        android:paddingTop="12dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardExchange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <!-- LinearLayout để chứa icon và tên mục -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_green"
            android:padding="16dp">

            <!-- Icon -->
            <ImageView
                android:id="@+id/iconLogout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logout" /> <!-- Đặt icon tương ứng ở đây -->

            <!-- Tên mục -->
            <TextView
                android:id="@+id/tvLogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>
